<!DOCTYPE html>
<html>
  <head>
    <title>EdDocs</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', 'users', 'pages', 'levels', 'courses', 'foundations', 'students_table', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= action_cable_meta_tag %>
    <%= javascript_pack_tag 'application' %>
  </head>
  <body>
    <%= react_component('Header', current_user: current_user.to_json)%>
    <%= render 'layouts/messages' %>
    <%= yield %>
  </body>
</html>
