<div class='devise-form'>
  <h3>Forgot your password?</h3>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: 'E-mail', require: true, autocomplete: "email", class:'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit "Send instructions", class: 'btn btn-secondary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>
